# ============================================================================
# Core Application Settings (Required)
# ============================================================================

# Python Path (for imports)
PYTHONPATH="."

# Google Gemini API (Required for LLM functionality)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY="your_google_api_key_here"

# SEC EDGAR API (Required for SEC data)
# Format: "Email Company/AppName"
# Example: "john.doe@example.com MyFinanceApp"
SEC_HEADER="your.email@example.com Your App Name"

# ============================================================================
# Database & Cache (Required for Web Application)
# ============================================================================

# PostgreSQL Database
# Local: postgresql://analyst:changeme123@localhost:5432/analyst_agent
# Docker: postgresql://analyst:changeme123@db:5432/analyst_agent
# Production: Use managed database URL (Supabase, Railway, etc.)
DATABASE_URL="postgresql://analyst:changeme123@localhost:5432/analyst_agent"

# Redis Cache & Task Queue
# Local: redis://localhost:6379/0
# Docker: redis://redis:6379/0
# Production: Use managed Redis URL (Upstash, Railway, etc.)
REDIS_URL="redis://localhost:6379/0"

# ============================================================================
# Security (Required for Web Application)
# ============================================================================

# JWT Secret Key (generate with: openssl rand -hex 32)
SECRET_KEY="generate_this_with_openssl_rand_hex_32_minimum_32_chars"

# CORS Origins (comma-separated for production)
# Example: "https://yourapp.com,https://www.yourapp.com"
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# ============================================================================
# Application Configuration
# ============================================================================

# Environment: development, staging, production
ENVIRONMENT="development"

# Debug Mode (set to false in production)
DEBUG="true"

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"

# API Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE="60"

# ============================================================================
# Optional: Production Data Sources
# ============================================================================

# Alpha Vantage (Alternative to yfinance for production)
# Free tier: 500 calls/day - https://www.alphavantage.co/
# ALPHA_VANTAGE_API_KEY=""

# Polygon.io (Premium real-time data)
# https://polygon.io/pricing
# POLYGON_API_KEY=""

# IEX Cloud (Financial data API)
# https://iexcloud.io/
# IEX_CLOUD_API_KEY=""

# Finnhub (Stock market data)
# https://finnhub.io/
# FINNHUB_API_KEY=""

# ============================================================================
# Optional: Email Notifications
# ============================================================================

# SMTP Configuration (for email reports, alerts)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your.email@gmail.com"
# SMTP_PASSWORD="your_app_password"
# SMTP_FROM="noreply@yourapp.com"

# SendGrid (Alternative email service)
# SENDGRID_API_KEY=""

# ============================================================================
# Optional: Monitoring & Analytics
# ============================================================================

# Sentry (Error tracking)
# https://sentry.io/
# SENTRY_DSN=""
# SENTRY_ENVIRONMENT="development"

# PostHog (Product analytics)
# https://posthog.com/
# POSTHOG_API_KEY=""
# POSTHOG_HOST="https://app.posthog.com"

# Prometheus Metrics
# PROMETHEUS_ENABLED="false"

# ============================================================================
# Optional: Feature Flags
# ============================================================================

# Enable MCP Server integration
MCP_ENABLED="false"

# Enable WebSocket chat
WEBSOCKET_ENABLED="false"

# Enable background jobs (Celery)
CELERY_ENABLED="false"

# Enable caching
CACHE_ENABLED="true"
CACHE_TTL_SECONDS="3600"

# ============================================================================
# Optional: Advanced Settings
# ============================================================================

# Database Connection Pool
# DB_POOL_SIZE="5"
# DB_MAX_OVERFLOW="10"

# Celery Configuration
# CELERY_BROKER_URL="${REDIS_URL}"
# CELERY_RESULT_BACKEND="${REDIS_URL}"

# File Upload Settings
# MAX_UPLOAD_SIZE_MB="10"
# UPLOAD_DIR="./uploads"

# Session Settings
# SESSION_COOKIE_NAME="analyst_agent_session"
# SESSION_COOKIE_SECURE="false"  # Set to true in production with HTTPS
# SESSION_COOKIE_HTTPONLY="true"
# SESSION_COOKIE_SAMESITE="lax"
